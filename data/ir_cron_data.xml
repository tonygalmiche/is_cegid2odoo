<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Tâche planifiée pour l'import des fichiers CSV Cegid -->
    <record id="ir_cron_cegid_import_csv" model="ir.cron">
        <field name="name">Cegid - Import fichiers CSV</field>
        <field name="model_id" ref="model_is_cegid_import"/>
        <field name="state">code</field>
        <field name="code">model.cron_import_csv_files()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">hours</field>
        <field name="numbercall">-1</field>
        <field name="active">True</field>
        <field name="doall">False</field>
    </record>

</odoo>
