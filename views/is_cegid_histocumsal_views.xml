<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vue Tree -->
    <record id="is_cegid_histocumsal_tree_view" model="ir.ui.view">
        <field name="name">is.cegid.histocumsal.tree</field>
        <field name="model">is.cegid.histocumsal</field>
        <field name="arch" type="xml">
            <tree string="Historique Cumuls Salaires">
                <field name="phc_salarie"/>
                <field name="phc_cumulpaie"/>
                <field name="phc_montant" sum="Total"/>
            </tree>
        </field>
    </record>

    <!-- Vue Form -->
    <record id="is_cegid_histocumsal_form_view" model="ir.ui.view">
        <field name="name">is.cegid.histocumsal.form</field>
        <field name="model">is.cegid.histocumsal</field>
        <field name="arch" type="xml">
            <form string="Historique Cumuls Salaires">
                <sheet>
                    <group>
                        <group>
                            <field name="phc_salarie"/>
                            <field name="phc_cumulpaie"/>
                        </group>
                        <group>
                            <field name="phc_montant"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vue Search -->
    <record id="is_cegid_histocumsal_search_view" model="ir.ui.view">
        <field name="name">is.cegid.histocumsal.search</field>
        <field name="model">is.cegid.histocumsal</field>
        <field name="arch" type="xml">
            <search string="Recherche Historique Cumuls Salaires">
                <field name="phc_salarie"/>
                <field name="phc_cumulpaie"/>
                <separator/>
                <filter string="Cumul C1" name="cumulpaie_c1" domain="[('phc_cumulpaie', '=', 'C1')]"/>
                <filter string="Cumul C3" name="cumulpaie_c3" domain="[('phc_cumulpaie', '=', 'C3')]"/>
                <separator/>
                <group expand="0" string="Grouper par">
                    <filter string="Salarié" name="group_salarie" context="{'group_by': 'phc_salarie'}"/>
                    <filter string="Cumul Paie" name="group_cumulpaie" context="{'group_by': 'phc_cumulpaie'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="is_cegid_histocumsal_action" model="ir.actions.act_window">
        <field name="name">Historique Cumuls Salaires</field>
        <field name="res_model">is.cegid.histocumsal</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="is_cegid_histocumsal_search_view"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aucun enregistrement trouvé
            </p>
            <p>
                Cette table contient l'historique des cumuls de salaires importé depuis Cegid.
            </p>
        </field>
    </record>

</odoo>
